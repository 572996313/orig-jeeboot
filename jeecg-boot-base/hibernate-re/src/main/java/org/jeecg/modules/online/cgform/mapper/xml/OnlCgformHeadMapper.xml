<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.online.cgform.mapper.OnlCgformHeadMapper">

    <!-- 执行ddl语句 -->
    <update id="executeDDL" parameterType="java.lang.String">
        ${sqlStr} <!-- 同步数据库，已加权限 -->
    </update>

    <!-- 执行查询语句 -->
    <select id="queryList" parameterType="java.lang.String" resultType="java.util.HashMap">
        ${sqlStr} <!-- TODO 【QQYUN-6491】导出SQL，不好改 -->
    </select>

    <!-- 查询Online所有的配置表名集合 -->
    <select id="queryOnlinetables" resultType="java.lang.String">
        select table_name from onl_cgform_head
    </select>


    <!-- 执行查询语句返回一个map -->
    <select id="queryOneByTableNameAndId" parameterType="java.lang.String" resultType="java.util.Map">
        select * from ${tbname} where id = #{dataId} <!-- 已过滤 -->
    </select>

    <!-- 根据表名查询表内记录数 -->
    <select id="queryCountByTableName" parameterType="java.lang.String" resultType="java.lang.Integer">
        SELECT COUNT(1) FROM ${tbname} <!-- 已过滤 -->
    </select>

    <!-- 执行delete 删除数据 -->
    <delete id="deleteOne" parameterType="java.lang.String">
        delete from ${tbname} where id = #{dataId} <!-- 已过滤 -->
    </delete>

    <!-- 根据code查询id -->
    <select id="queryCategoryIdByCode" resultType="java.lang.String" parameterType="java.lang.String">
        select ID from SYS_CATEGORY WHERE CODE = #{code,jdbcType=VARCHAR}
    </select>

</mapper>