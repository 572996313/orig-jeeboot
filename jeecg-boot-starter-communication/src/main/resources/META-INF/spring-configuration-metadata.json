    {
      "name": "jeecg.communication.sms",
      "type": "org.jeecg.common.communication.config.JeecgCommunicationProperties$SmsConfig",
      "sourceType": "org.jeecg.common.communication.config.JeecgCommunicationProperties",
      "description": "短信服务配置"
    },
    {
      "name": "jeecg.communication.websocket",
