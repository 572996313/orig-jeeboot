    {
      "name": "jeecg.communication.websocket.allowed-origins",
      "type": "java.lang.String",
      "defaultValue": "*",
      "description": "允许的来源"
    },
    {
      "name": "jeecg.communication.websocket.heartbeat.enabled",
      "type": "java.lang.Boolean",
      "defaultValue": true,
      "description": "是否启用心跳检测"
    },
    {
      "name": "jeecg.communication.websocket.heartbeat.interval",
      "type": "java.lang.Long",
      "defaultValue": 30,
      "description": "心跳检测间隔(秒)"
    },
    {
      "name": "jeecg.communication.websocket.heartbeat.timeout-count",
      "type": "java.lang.Integer",
      "defaultValue": 3,
      "description": "心跳超时次数"
