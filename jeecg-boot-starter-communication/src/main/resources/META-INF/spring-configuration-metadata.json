    {
      "name": "jeecg.communication.websocket.enabled",
      "type": "java.lang.Boolean",
      "defaultValue": false,
      "description": "是否启用WebSocket服务"
    },
    {
      "name": "jeecg.communication.websocket.path",
      "type": "java.lang.String",
      "defaultValue": "/websocket/**",
      "description": "WebSocket访问路径"
