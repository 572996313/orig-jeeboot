    {
      "name": "jeecg.communication.email.encoding",
      "type": "java.lang.String",
      "defaultValue": "UTF-8",
      "description": "邮件编码"
    },
    {
      "name": "jeecg.communication.sms.enabled",
      "type": "java.lang.Boolean",
      "defaultValue": false,
      "description": "是否启用短信服务"
    },
    {
      "name": "jeecg.communication.sms.provider",
      "type": "java.lang.String",
      "defaultValue": "aliyun",
      "description": "短信服务提供商 (aliyun, tencent)"
